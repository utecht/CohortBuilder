<%= form_with(model: field) do |form| %>
  <% if field.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(field.errors.count, "error") %> prohibited this field from being saved:</h2>

      <ul>
        <% field.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.text_field :type %>
  </div>

  <div>
    <%= form.label :example, style: "display: block" %>
    <%= form.text_field :example %>
  </div>

  <div>
    <%= form.label :stats, style: "display: block" %>
    <%= form.text_field :stats %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :document_id, style: "display: block" %>
    <%= form.text_field :document_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
